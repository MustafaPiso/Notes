<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.piso.noteapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AuthenticationSystem.SignupActivity" />
        <activity
            android:name=".AuthenticationSystem.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_navigation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AuthenticationSystem.InfoActivity" />
        <activity android:name=".AuthenticationSystem.Forgot_Password" />
        <activity
            android:name=".ProfilePackage.UserProfile"
            android:label="@string/title_activity_my_profile"
            android:theme="@style/AppTheme" />
        <activity android:name=".UserFollowers" />
        <activity android:name=".UserInterests" />
        <activity
            android:name=".UserAbout"
            android:label="@string/title_activity_user_about"
            android:theme="@style/AppTheme" />
        <activity android:name=".NoteComments" />
        <activity android:name=".EditNote" />
        <activity
            android:name=".MyOwnProfile"
            android:label="@string/title_activity_my_own_profile"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>